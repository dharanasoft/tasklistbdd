source 'http://rubygems.org'

gem 'rails', '3.0.7'
gem 'sqlite3'
gem 'formtastic'
group :development, :test do 
  gem 'launchy'
  gem 'rspec-rails' # test framework which provides rails specific assertions
  gem 'cucumber-rails' # cucumber is BDD framework
  gem 'capybara' # browser emulator
  gem 'database_cleaner' # clean database within tests
end
